<h2> Sign Up </h2>
<%=form_for @user do |f| %>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :age%>
<%= f.text_field :age%>
<%= f.label :favourite_cocktail%>
<%= f.text_field :favourite_cocktail%>
<%= f.label :location%>
<%= f.text_field :location%>
<%= f.label :email%>
<%= f.text_field :email%>
<%= f.label :password%>
<%= f.password_field :password%>
<%= f.label :password_confirmation%>
<%= f.password_field :password_confirmation%>
<%=f.submit%>
<%end%>  